<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".fragment.StaffInfoFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_10sdp"
    >

    <ImageView
        android:id="@+id/staffInfoImageViewPerson"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="36dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staffInfoImageViewPerson"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/primaryDark"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/cairo_bold"
                />

            <TextView
                android:id="@+id/staffInfoTextViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Lecturer"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/cairo_regular"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/faculty"
                android:textColor="@color/primaryDark"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/cairo_bold"
                />

            <TextView
                android:id="@+id/staffInfoTextViewCollage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="AlAqsa University"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/cairo_regular"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/department"
                android:textColor="@color/primaryDark"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/cairo_bold"
                />

            <TextView
                android:id="@+id/staffInfoTextViewDep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="AlAqsa University"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/cairo_regular"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/email"
                android:textColor="@color/primaryDark"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/cairo_bold"
                />

            <TextView
                android:id="@+id/staffInfoTextViewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="AlAqsa University"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/cairo_regular"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/mobile_no"
                android:textColor="@color/primaryDark"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/cairo_bold"
                />

            <TextView
                android:id="@+id/staffInfoTextMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="AlAqsa University"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/cairo_regular"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>