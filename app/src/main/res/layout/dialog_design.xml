<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#57000000"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/dialog_cardview"
        android:id="@+id/dialog_layout"
        android:orientation="vertical"
        ></LinearLayout>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_15sdp"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    android:backgroundTint="@color/white"
    app:cardElevation="@dimen/_15sdp"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_centerInParent="true"
    android:id="@+id/dialog_cardview"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/dialog_contentLayout"
            android:visibility="visible"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تأكيد الإعتذار عن محاضرة مساق برمجة تطبيقات هواتف نقالة 2 شعبة 101 الساعة 10:00 - 12:00"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_17ssp"
                android:layout_margin="@dimen/_20sdp"
                android:id="@+id/dialog_tv_title1"
                android:fontFamily="@font/cairo_regular"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تأكيد الإعتذار عن محاضرة مساق برمجة تطبيقات هواتف نقالة 2 شعبة 101 الساعة 10:00 - 12:00"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:layout_margin="@dimen/_20sdp"
                android:id="@+id/dialog_tv_title2"
                android:visibility="gone"
                android:fontFamily="@font/cairo_regular"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/dialog_contentLayout2"
            android:visibility="visible"
            >
         <RadioButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:checked="true"
             android:buttonTint="@color/primary"
             android:text="@string/changeLectureTime"
             android:layout_marginStart="@dimen/_15sdp"
             android:layout_marginTop="@dimen/_15sdp"
             android:textSize="@dimen/_13ssp"
             android:textColor="@color/primary"
             android:textStyle="bold"
             android:fontFamily="@font/cairo_bold"
             />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/OldTime"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:fontFamily="@font/cairo_bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00 - 02:00"
                    android:id="@+id/dialog_tv_oldTime"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cairo_regular"
                    />
            </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NewTime"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/cairo_bold"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="12:00 - 02:00"
                    android:id="@+id/dialog_et_newTime"
                    android:lines="1"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/text_view_background_empty"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/black"
                    android:elevation="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:padding="@dimen/_8sdp"
                    android:fontFamily="@font/cairo_regular"
                    />


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:buttonTint="@color/primary"
                android:text="@string/changeLectureHall"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:fontFamily="@font/cairo_bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/OldHall"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:fontFamily="@font/cairo_bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GWH101"
                    android:id="@+id/dialog_tv_oldHall"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cairo_regular"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/NewHall"
                android:layout_marginStart="@dimen/_20sdp"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/cairo_bold"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Enterhallname"
                android:id="@+id/dialog_et_newHall"
                android:lines="1"
                android:maxLength="10"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/text_view_background_empty"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:elevation="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:padding="@dimen/_8sdp"
                android:fontFamily="@font/cairo_regular"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:background="@color/primary"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Confirm"
                android:id="@+id/dialog_btn1"
                android:fontFamily="@font/cairo_bold"
                />
            <View
                android:id="@+id/divider"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Cancel"
                android:id="@+id/dialog_btn2"
                android:fontFamily="@font/cairo_bold"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dialog_cardview"
        android:id="@+id/dialog_layout2"
        android:orientation="vertical"
        ></LinearLayout>


</RelativeLayout>