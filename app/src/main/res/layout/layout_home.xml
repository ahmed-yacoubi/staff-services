<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeLinearLayoutItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:orientation="vertical"
    android:padding="@dimen/_4sdp">

    <LinearLayout
        android:id="@+id/homeLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/homeTextViewCourse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:text="Mobile Apps Development"
            android:textAlignment="center"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/homeTextViewClass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_weight=".8"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:text="101"
            android:textAlignment="center"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/homeTextViewHill"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_weight="1"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:text="GWH 201"
            android:textAlignment="center"
            android:textSize="@dimen/_10ssp"

            />

        <TextView
            android:id="@+id/homeTextViewTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:text="10:00-12:00"
            android:textAlignment="center"

            android:textSize="@dimen/_10ssp" />

        <ImageView
            android:id="@+id/homeImageViewArrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".1"

            android:src="@drawable/ic_arrow_down_black" />

        <ImageView
            android:id="@+id/homeImageViewArrowUp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:src="@drawable/ic_arrow_black"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeLinearLayoutOpe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:backgroundTint="@color/teal_200"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_7sdp">

            <TextView
                android:id="@+id/homeTextViewApologize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="5"
                android:fontFamily="@font/cairo_regular"
                android:gravity="center"
                android:lines="1"
                android:text="@string/apologize"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:backgroundTint="@color/purple_500"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_7sdp">

            <TextView
                android:id="@+id/homeTextViewChDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="5"
                android:fontFamily="@font/cairo_regular"
                android:gravity="center"
                android:lines="1"
                android:text="@string/change_date"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_7sdp">

            <TextView
                android:id="@+id/homeTextViewChHall"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="5"
                android:fontFamily="@font/cairo_regular"
                android:gravity="center"
                android:lines="1"
                android:text="@string/addMeet"
                android:textAllCaps="false"
                android:textColor="@color/primaryDark"
                android:textSize="@dimen/_12ssp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_11sdp">

        <TextView
            android:id="@+id/homeTextViewAttendance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:layout_weight="5"
            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:lines="1"
            android:text="@string/attendance_sheet"
            android:textAllCaps="false"
            android:textColor="@color/primaryDark"
            android:textSize="@dimen/_12ssp"
            android:visibility="gone"

            />
    </androidx.cardview.widget.CardView>


    <View
        android:id="@+id/homeView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_12sdp"

        android:background="@color/primaryDark" />
</LinearLayout>
