<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vstaffCardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_16sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_16sdp">

    <LinearLayout
        android:id="@+id/vstaffLinearLayoutItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_12sdp">

        <ImageView
            android:id="@+id/vstaffImageViewPerson"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_person" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vstaffTextViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" د.خالد شرف "
                android:textColor="@color/primary"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vstaffTextViewFaculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="كلية الحاسبات وتكنولوجيا المعلومات"
                android:textColor="@color/primary"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tvDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="تكنولوجيا الشبكات والهواتف النقالة"
                android:textColor="@color/primary"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>