<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menuCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_6sdp">

        <LinearLayout
            android:id="@+id/SubjectLayout_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="@string/subject_name"
                    android:textColor="@color/primaryDark"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/SubjectLayout_tv_subjectname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layoutDirection="locale"
                    android:lines="1"
                    android:text="Mobile app programming 1"
                    android:textColor="@color/black"
                    android:textDirection="locale"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:id="@+id/SubjectLayout_iv_ArrowDown"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:src="@drawable/ic_arrow_down"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/SubjectLayout_iv_ArrowUp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:src="@drawable/ic_arrow_up"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/SubjectLayout_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="@string/subject_id"
                        android:textColor="@color/primaryDark"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:id="@+id/SubjectLayout_tv_subjectid"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="ITCS3317"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="@string/DivisionId"
                        android:textColor="@color/primaryDark"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:id="@+id/SubjectLayout_tv_DivisionId"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="101"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="@string/gender"
                        android:textColor="@color/primaryDark"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:id="@+id/SubjectLayout_tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="Male"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="@string/Students_number"
                        android:textColor="@color/primaryDark"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:id="@+id/SubjectLayout_tv_StudentsNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="35"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:elevation="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_20sdp">

                        <Spinner
                            android:id="@+id/Agenda_Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:entries="@array/ReportsType"
                            android:padding="@dimen/_10sdp"
                            android:popupBackground="@drawable/text_view_background_empty"
                            android:popupElevation="@dimen/_10sdp" />
                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/SubjectLayout_iv_download"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:src="@drawable/ic_export_pdf"
                        android:visibility="visible" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>